menu "Hardware Drivers Config"

config SOC_XMC7200D_E272K8384AA
    bool
    select SOC_SERIES_IFX_XMC
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    select PKG_USING_INFINEON_CAT1CM0P
    select PKG_USING_INFINEON_CMSIS
    select PKG_USING_INFINEON_CORE_LIB
    select PKG_USING_INFINEON_MTB_HAL_CAT1
    select PKG_USING_INFINEON_MTB_PDL_CAT1
    select PKG_USING_INFINEON_RETARGET_IO
    default y

menu "Onboard Peripheral Drivers"

    config BSP_USING_USB_TO_USART
        bool "Enable USB TO USART (uart3)"
        select BSP_USING_GPIO
        select BSP_USING_UART
        select BSP_USING_UART3
        default y
endmenu

menu "On-chip Peripheral Drivers"

    config BSP_USING_GPIO
        bool "Enable GPIO"
        select RT_USING_PIN
        default y

    menuconfig BSP_USING_UART
        bool "Enable UART"
        default y
        select RT_USING_SERIAL
        if BSP_USING_UART
            config BSP_USING_UART3
                bool "Enable UART3"
                default n
            config UART_CPU_IRQ_Number
                int "UART connect CPU Interrupt Number (0-7)"
                range 0 7
                default 3
        endif

endmenu

endmenu
